# Description: Hashcat password cracker for GPU
# URL: https://hashcat.net/
# Packager: 
# Maintainer:	Lin SiFuh, #crux at freenode dot net 	 
# Depends on: hashcat

name=hashcat-utils
version=1.9
release=3
source=(https://github.com/hashcat/${name}/archive/v${version}/${name}-${version}.tar.gz)

build() {

  cd ${name}-${version}/src

  make
	
  mkdir -p ${PKG}/usr/bin
	cp *.bin ${PKG}/usr/bin

}
